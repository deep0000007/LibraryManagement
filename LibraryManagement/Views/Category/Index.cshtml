@model IEnumerable<LibraryManagement.Models.Category>

<div class="text-center mb-4">
    <h2 class="display-4">Category List</h2>
   
</div>



<div class=" mb-3">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</div>

<table class="table table-striped table-bordered shadow-sm rounded">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.catname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th class="text-center" style="width: 150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.catname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-warning btn-sm mr-2" })
                        @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-info btn-sm mr-2" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-sm mr-2" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

