
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="row">
    <div class="col-sm-5">
        @using (Html.BeginForm("save", "ReturnBook", FormMethod.Post))
        {
            <div>
                <h3>Return Book</h3>
            </div>

            <div class="form-group">
                <label> Member Id</label>
                <input type="text" id="member_id" @*value="member_id"*@ class="form-control" placeholder="Member" reguired />
            </div>
            <div class="form-group">
                <label> Name</label>
                <input type="text" id="mname" @*value="mname"*@ class="form-control" placeholder="Name" reguired />
            </div>
            <div class="form-group">
                <label> Book </label>
                <select class="form-control" id="book" name="book">
                    <option>Please Select</option>
                </select>

            </div>
            <div class="form-group">
                <label> Retrurn Book</label>
                <input type="date" id="returnbook" @*value="issuedate"*@ class="form-control" placeholder="Issue date" reguired />
            </div>
            <div class="form-group">
                <label> Days Elaps</label>
                <input type="date" id="elap" @*value="returndate"*@ class="form-control" placeholder="Return date" reguired />
            </div>
            <div class="form-group">
                <label> Fine</label>
                <input type="text" id="fine" @*value="returndate"*@ class="form-control" placeholder="Return date" reguired />
            </div>

            <div class="form-group">

                <input type="submit" value="save" class="btn btn-success" reguired />
            </div>




        }
    </div>
</div>


