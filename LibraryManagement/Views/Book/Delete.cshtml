@model LibraryManagement.Models.Book

@{
    ViewBag.Title = "Delet";
}

<h2 class="text-center mb-4">Delete Book</h2>

<div class="alert alert-danger text-center" role="alert">
    <h4>Are you sure you want to delete this book?</h4>
</div>

<div class="card mb-4">
    <div class="card-header bg-warning text-white">
        <h5>Book Details</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.bname)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.bname)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.contents)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.contents)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.pages)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.pages)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.edition)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.edition)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Author.name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Author.name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Category.catname)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Category.catname)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Publisher.name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Publisher.name)
            </dd>
        </dl>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group text-left">
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ml-2" })
    </div>
}
