<style>
    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    .form-horizontal {
        max-width: 800px;
        margin: 0 auto;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .col-form-label {
        font-weight: bold;
    }

    .form-control {
        box-shadow: none;
        transition: box-shadow 0.3s;
    }

        .form-control:focus {
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .shadow-lg {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .rounded {
        border-radius: 0.5rem;
    }
</style>
